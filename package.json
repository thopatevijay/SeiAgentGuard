{
  "name": "seiagentguard",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:core\"",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:core": "npm run dev --workspace=packages/core",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf packages/*/dist apps/*/dist packages/*/.next apps/*/.next",
    "env:validate": "node tools/scripts/validate-env.js",
    "health:check": "node tools/scripts/health-check.js"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4",
    "concurrently": "^8.2.2"
  }
}
